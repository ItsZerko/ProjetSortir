{% extends 'base.html.twig' %}
{% block body %}
    <h1>Modifier ville :</h1>
<div class="sortie">
    <div class="row">
        <div class="col-8 offset-2">
            {{ form_start(form) }}
            {{ form(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>

    {# Affichage des Flashes #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div>{{ label }} : {{ message }}</div>
        {% endfor %}
    {% endfor %}

{% endblock %}

