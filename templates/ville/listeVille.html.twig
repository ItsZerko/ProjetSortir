{% extends 'base.html.twig' %}
{% block body %}

<h1>Gérer les lieux</h1>
    <h2>Filtrer les lieux :</h2>
    <p>Le nom contient : </p>

    {{ form(recherche) }}


    <div class="afficherVille">
        <form>
            <h1>Gérer les lieux</h1>
            <h2>Filtrer les lieux :</h2>
            <div>
                <input type="search" id="maRecherche" name="q" placeholder="Le nom contient :">
                <button>Rechercher</button>
            </div>
        </form>

        <br>
        <div class="table ville">
            <table>
                <thead class="thead-dark">
                <tr>
                    <th>Ville</th>
                    <th>Code postal</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ville in villes %}
                <tr>
                    <td style="color:white"> {{ ville.nom }} </td>
                    <td style="color:white"> {{ ville.codePostal }} </td>
                    <td><a href="{{ path("supprimer_ville",{'id':ville.id}) }}" style="color:red"> Supprimer </a></td>
                    <td><a href="{{ path("modifier_ville",{'id':ville.id}) }}" style="color:red"> Modifier </a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
            <br>
        </div>
        <button><a href="{{ path("formulaire_ville") }}">Ajouter</a></button>
    </div>

{% endblock %}